	function quenpass(){
		var a,b,c;
		a=texta.value;
		b=textb.value;
		c=textc.value;
		if(a=="" || b=="" || c=="")
			alert("bạn cần nhập đủ thông tin");
		else{
			alert("thông tin của bạn đã được ghi nhận, hãy check Mail trong vài phút");
			location.assign("from1.html");
		}
	
	}
